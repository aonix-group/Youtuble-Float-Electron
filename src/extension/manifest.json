{
  "name": "Youtube Float",
  "version": "1.0.0",
  "description": "Float YouTube videos in a float player",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "https://www.youtube.com/",
    "contextMenus",
    "declarativeContent"
  ],
  "page_action": {
    "default_icon": {
      "19": "icon.png"
    },
    "default_title": "Youtube Float"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}